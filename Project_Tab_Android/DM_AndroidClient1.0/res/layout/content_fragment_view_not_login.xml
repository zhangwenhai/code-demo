<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/default_view_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/tab_fragment_title_not_login"
            android:textColor="@color/font_color_green"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/default_view_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_fragment_content_not_login"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</LinearLayout>