<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@android:color/transparent" >

    <Button
        android:id="@+id/titlebar_subtitle_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:textColor="@color/font_color_white"
        android:textSize="@dimen/font_size_medium"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/titlebar_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/titlebar_opertion_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingRight="@dimen/margin_small" >

        <ImageView
            android:id="@+id/titlebar_btn_right_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_titlebar_setting_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_btn_right_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_titlebar_setting_selector"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlebar_text_title"
        style="@style/titlebar_textview_text"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:ellipsize="middle"
        android:singleLine="true" />

    <com.android.ui.basic.titlebar.TitleBarPageView
        android:id="@+id/titlebar_page"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>