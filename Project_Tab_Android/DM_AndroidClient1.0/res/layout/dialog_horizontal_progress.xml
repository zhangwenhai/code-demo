<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.7dip"
        android:text="@string/dialog_text"
        android:textColor="@color/bg_color_white"
        android:textSize="14.7dp" />

    <TextView
        android:id="@+id/progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.7dip"
        android:text="@string/dialog_percentum"
        android:textColor="@color/bg_color_white"
        android:textSize="12sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10.7dip"
        android:layout_marginRight="10.7dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/dialog_separatrix"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:progress="10"
        android:progressDrawable="@drawable/dialog_progress_horizontal" >
    </ProgressBar>

</LinearLayout>